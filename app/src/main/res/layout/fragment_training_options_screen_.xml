<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrainingOptionsScreen_Fragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Selecte the type of training"
        android:textColor="#673AB7"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_typ_input"
            android:layout_width="173dp"
            android:layout_height="103dp"
            android:src="@drawable/input_icon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Answer"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_true_false"
            android:layout_width="175dp"
            android:layout_height="71dp"

            android:layout_marginTop="20dp"
            android:src="@drawable/truefalseicon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True False"
            android:textSize="16sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="155dp"
            android:layout_height="136dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/warm_up_game" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartScreen_Fragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Memory trainer"
            android:textColor="#3F51B5"
            android:textDirection="firstStrongLtr"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_iba_logo"
            android:layout_width="71dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/iba_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/img_puzzle"
            android:layout_width="197dp"
            android:layout_height="181dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/main_logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_memorize"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Memorize" />

        <Button
            android:id="@+id/btn_learn_tables"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Learn" />

        <Button
            android:id="@+id/btn_about_app"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:text="About app" />

        <TextView
            android:id="@+id/txt_under_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed Under Supervision of  Dr Ahsan-ullah Abro"
            android:textColor="#0228FF"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer: Zeeshan Ahmed [023-18-0031]"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
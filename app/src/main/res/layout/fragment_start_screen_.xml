<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartScreen_Fragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Table Memorizer"
            android:textColor="#3F51B5"
            android:textDirection="firstStrongLtr"
            android:textSize="48sp"
            android:textStyle="bold|italic" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="155dp"
            android:layout_height="136dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_ani" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_memorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Memorize" />

        <Button
            android:id="@+id/btn_learn_tables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Learn" />

        <Button
            android:id="@+id/btn_about_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:text="About app" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/iba_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed Under Supervision of  Dr Ahsan-ullah Abro"
            android:textColor="#0228FF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer: Zeeshan Ahmed [023-18-0031]" />

    </LinearLayout>
</LinearLayout>